    	socket.get('/airplanes/getcompaniesbyname',{},function(res){
    		$('select.companycombobox').append('<option company_name="" company_id=""></option>');
    		for(var i=0;i<res.length;i++){
        		if(parseInt(airplane.get('contact_id'))!=parseInt(res[i].contact_id)){
	        		$('select.companycombobox').append('<option company_name="'+res[i].company_name+'" company_id="'+res[i].company_id+'">'+res[i].company_name+'</option>');
        		}
        	}
        	companycombobox = $('select.companycombobox').combobox();
        	$('input.companycombobox').on('keyup',function(e){
        		if(curcompanyval!=$('input.companycombobox').val()&&e.keyCode!=9&&e.keyCode!=13&&e.keyCode!=27){
    				curcompanyval =  $('input.companycombobox').val();
        			updateCompanyCombobox();
    			}
        		else if(e.keyCode==9||e.keyCode==13||e.keyCode==27){
        			$('input.companycombobox').change();
    			}
    		});
    		
		});
		
		function updateCompanyCombobox(){
			clearTimeout(companysearchtimer);
    		companysearchtimer = setTimeout(function(){
    			socket.get('/airplanes/getcompaniesbyname',{search: curcompanyval},function(res){
    				var tempval = $('input.companycombobox').val();
        			$('select.companycombobox').empty();
		    		for(var i=0;i<res.length;i++){
		        		if(parseInt(airplane.get('contact_id'))!=parseInt(res[i].contact_id)){
			        		$('select.companycombobox').append('<option company_name="'+res[i].company_name+'" company_id="'+res[i].company_id+'">'+res[i].company_name+'</option>');
		        		}
		        	}
        			companycombobox.data('combobox').refresh(); 
        			$('input.companycombobox').val(tempval);
        			companycombobox.data('combobox').lookup();
    			});
    		},100);
		}
        	
        		
		var datatable = $('#contacts').dataTable({
		        "processing": true,
